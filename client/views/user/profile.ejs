<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - Chilahati Archive</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container">
            <a href="/" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>

            <div class="profile-card">
                <div class="profile-header">
                    <div class="profile-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <h1>
                        <%= user.username %>
                    </h1>
                    <span class="profile-role"><i class="fas fa-shield-alt"></i>
                        <%= user.role %>
                    </span>
                </div>

                <div class="profile-body">
                    <!-- Flash Messages -->
                    <% if (success_msg && success_msg.length> 0) { %>
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i>
                            <%= success_msg %>
                        </div>
                        <% } %>

                            <% if (error_msg && error_msg.length> 0) { %>
                                <div class="alert alert-error">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <%= error_msg %>
                                </div>
                                <% } %>

                                    <!-- User Information -->
                                    <div class="info-section">
                                        <h2><i class="fas fa-info-circle"></i> Account Information</h2>
                                        <div class="info-grid">
                                            <div class="info-item">
                                                <div class="info-label">Email Address</div>
                                                <div class="info-value">
                                                    <%= user.email %>
                                                </div>
                                            </div>
                                            <div class="info-item">
                                                <div class="info-label">Account Status</div>
                                                <div class="info-value">
                                                    <% if (user.isVerified) { %>
                                                        <i class="fas fa-check-circle" style="color: #28a745;"></i>
                                                        Verified
                                                        <% } else { %>
                                                            <i class="fas fa-exclamation-circle"
                                                                style="color: #ffc107;"></i> Not Verified
                                                            <% } %>
                                                </div>
                                            </div>
                                            <div class="info-item">
                                                <div class="info-label">Member Since</div>
                                                <div class="info-value">
                                                    <%= new Date(user.createdAt).toLocaleDateString('en-US', {
                                                        year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Update Username Form -->
                                    <div class="form-section">
                                        <h3><i class="fas fa-edit"></i> Change Username</h3>
                                        <form action="/profile/update-username" method="POST">
                                            <div class="form-group">
                                                <label for="newUsername">New Username</label>
                                                <input type="text" id="newUsername" name="newUsername"
                                                    placeholder="Enter new username" required minlength="3"
                                                    maxlength="30">
                                                <div class="help-text">Must be at least 3 characters long and unique
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="password">Confirm Password</label>
                                                <input type="password" id="password" name="password"
                                                    placeholder="Enter your current password" required>
                                                <div class="help-text">For security, please confirm your password</div>
                                            </div>
                                            <button type="submit" class="btn-primary">
                                                <i class="fas fa-save"></i> Update Username
                                            </button>
                                        </form>
                                    </div>

                                    <!-- Change Password Form -->
                                    <div class="form-section">
                                        <h3><i class="fas fa-key"></i> Change Password</h3>
                                        <form action="/profile/change-password" method="POST" id="changePasswordForm">
                                            <div class="form-group">
                                                <label for="currentPassword">Current Password</label>
                                                <input type="password" id="currentPassword" name="currentPassword"
                                                    placeholder="Enter current password" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="newPassword">New Password</label>
                                                <input type="password" id="newPassword" name="newPassword"
                                                    placeholder="Min. 8 characters" required minlength="8">
                                                <div class="help-text">Must be at least 8 characters long</div>
                                            </div>
                                            <div class="form-group">
                                                <label for="confirmNewPassword">Confirm New Password</label>
                                                <input type="password" id="confirmNewPassword" name="confirmNewPassword"
                                                    placeholder="Re-enter new password" required>
                                                <small id="passwordMatchError"
                                                    style="color: #dc3545; display: none; margin-top: 5px;">
                                                    Passwords do not match!
                                                </small>
                                            </div>
                                            <button type="submit" class="btn-primary">
                                                <i class="fas fa-lock"></i> Change Password
                                            </button>
                                        </form>
                                    </div>

                                    <!-- Forgot Password Section -->
                                    <div class="form-section">
                                        <h3><i class="fas fa-question-circle"></i> Forgot Your Password?</h3>
                                        <p style="color: #666; margin-bottom: 1rem;">
                                            If you can't remember your password, we can send you a password reset link
                                            via email.
                                        </p>
                                        <form action="/forgot-password" method="POST">
                                            <input type="hidden" name="email" value="<%= user.email %>">
                                            <button type="submit" class="btn-secondary">
                                                <i class="fas fa-envelope"></i> Send Password Reset Email
                                            </button>
                                        </form>
                                    </div>

                                    <!-- Delete Account Section -->
                                    <div class="form-section" style="border: 2px solid #dc3545; background: #fff5f5;">
                                        <h3 style="color: #dc3545;"><i class="fas fa-exclamation-triangle"></i> Danger
                                            Zone</h3>
                                        <p style="color: #721c24; margin-bottom: 1rem; font-weight: 500;">
                                            ⚠️ Warning: Deleting your account is permanent and cannot be undone. All
                                            your data will be lost.
                                        </p>
                                        <form action="/profile/delete-account" method="POST" id="deleteAccountForm"
                                            onsubmit="return confirm('Are you absolutely sure you want to delete your account? This action cannot be undone!');">
                                            <div class="form-group">
                                                <label for="deletePassword">Confirm Your Password</label>
                                                <input type="password" id="deletePassword" name="password"
                                                    placeholder="Enter your password to confirm" required>
                                                <div class="help-text">Enter your password to permanently delete your
                                                    account</div>
                                            </div>
                                            <button type="submit" style="background: #dc3545;" class="btn-primary">
                                                <i class="fas fa-trash-alt"></i> Delete My Account
                                            </button>
                                        </form>
                                    </div>

                </div>
            </div>
        </div>

        <script>
            // Password matching validation for change password form
            const changePasswordForm = document.getElementById('changePasswordForm');
            const newPassword = document.getElementById('newPassword');
            const confirmNewPassword = document.getElementById('confirmNewPassword');
            const passwordMatchError = document.getElementById('passwordMatchError');

            changePasswordForm.addEventListener('submit', (e) => {
                if (newPassword.value !== confirmNewPassword.value) {
                    e.preventDefault();
                    passwordMatchError.style.display = 'block';
                    confirmNewPassword.style.borderColor = '#dc3545';
                }
            });

            // Clear error when user starts typing again
            confirmNewPassword.addEventListener('input', () => {
                passwordMatchError.style.display = 'none';
                confirmNewPassword.style.borderColor = '#ddd';
            });
        </script>